<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <!--<include-->
            <!--android:id="@+id/fab_group"-->
            <!--layout="@layout/floating_action_buttons"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/listview_footer"
            style="@style/TitleText"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/ltGrey"
            android:text="TextTest"/>

        <TextView
            android:id="@+id/completed_today"
            style="@style/TitleText"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/ltGrey"
            android:text="TextTest"/>

        </LinearLayout>

        <View
            android:id="@+id/kitkat_footer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/ltGrey" >
        </View>
    </LinearLayout>



</RelativeLayout>